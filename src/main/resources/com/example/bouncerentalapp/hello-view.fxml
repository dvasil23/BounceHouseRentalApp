<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bouncerentalapp.HelloController">

   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>

   <Label text="Welcome to Bounce Rental!" style="-fx-font-size: 18px;"/>

   <HBox spacing="10">
      <DatePicker fx:id="startDatePicker" promptText="Start Date"/>
      <DatePicker fx:id="endDatePicker" promptText="End Date"/>
      <Button text="Check Availability" onAction="#onCheckAvailabilityClick"/>
   </HBox>

   <TableView fx:id="productTable" prefHeight="300">
      <columns>
         <TableColumn fx:id="nameColumn" text="Product Name" prefWidth="150"/>
         <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
         <TableColumn fx:id="availableColumn" text="Available Qty" prefWidth="120"/>
      </columns>
   </TableView>
</VBox>
