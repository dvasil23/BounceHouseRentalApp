<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bouncerentalapp.ReviewController">

    <top>
        <Label text="Product Reviews"
               style="-fx-font-size: 20px; -fx-padding: 10px;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="reviewTable" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="productIdCol" text="Product ID" prefWidth="100"/>
                <TableColumn fx:id="productNameCol" text="Product Name" prefWidth="150"/>
                <TableColumn fx:id="reviewTextCol" text="Review" prefWidth="200"/>
                <TableColumn fx:id="averageRatingCol" text="Avg. Rating" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <Button text="Close"
                onAction="#handleClose"
                style="-fx-padding: 10px;"
                BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
